<p id="notice"><%= notice %></p>


<%= link_to 'New Topic', new_user_topic_path(current_user) %>

<h1>Questions</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Question</th>
      <th>Topic</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td>
          <%= link_to topic_question_path(question.topic, question) do %>
            <%= question.id %></td>
          <% end %>
        <td><%= question.question %></td>
        <td><%= question.topic&.name %></td>
        <td><%= question.user&.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>